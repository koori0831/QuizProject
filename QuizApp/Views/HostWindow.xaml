<Window x:Class="QuizApp.Views.HostWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:QuizApp.Converters"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="진행자용 정답지" Height="700" Width="500" Topmost="True"
        Background="{DynamicResource ApplicationBackgroundBrush}">

    <Window.Resources>
        <converters:PathToFullPathConverter x:Key="PathToFullPath"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="진행자 패널" FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

        <!-- 상태 및 타이머 -->
        <Border Grid.Row="1" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}" 
                Padding="15" CornerRadius="8" Margin="0,0,0,20">
            <StackPanel>
                <DockPanel LastChildFill="False" Margin="0,0,0,10">
                    <ui:SymbolIcon Symbol="Info24" Margin="0,0,10,0"/>
                    <TextBlock Text="상태" FontWeight="Bold" VerticalAlignment="Center" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    <TextBlock Text="{Binding CurrentStatusMessage}" Margin="10,0,0,0" Foreground="{DynamicResource SystemAccentColorBrush}" FontWeight="Bold" VerticalAlignment="Center"/>
                </DockPanel>

                <Separator Margin="0,0,0,10"/>

                <DockPanel LastChildFill="False">
                    <ui:SymbolIcon Symbol="Timer24" Margin="0,0,10,0"/>
                    <TextBlock Text="남은 시간" FontWeight="Bold" VerticalAlignment="Center" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    <TextBlock Text="{Binding TimerText}" FontSize="28" FontWeight="Bold" Margin="15,0,0,0" Foreground="#FF5555" VerticalAlignment="Center" FontFamily="Consolas"/>
                </DockPanel>
            </StackPanel>
        </Border>

        <!-- 현재 문제 정답 -->
        <Border Grid.Row="2" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}" 
                Padding="15" CornerRadius="8" Margin="0,0,0,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="현재 문제 정답" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

                <TextBlock Grid.Row="1" Text="{Binding CurrentAnswer}" FontSize="32" FontWeight="ExtraBold" 
                           HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap" 
                           Foreground="{DynamicResource SystemAccentColorBrush}" Margin="0,10,0,20"/>

                <!-- 진행자도 썸네일로 이미지를 볼 수 있게 함 -->
                <Border Grid.Row="2" CornerRadius="4" Background="Black">
                    <Image Source="{Binding CurrentImage, Converter={StaticResource PathToFullPath}}" 
                           Margin="10,10,10,10" Stretch="Uniform" Opacity="0.7"/>
                </Border>
            </Grid>
        </Border>

        <!-- 컨트롤 버튼 -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ui:Button Grid.Column="0" Content="오답 / 실패" Icon="{ui:SymbolIcon Dismiss24}" Command="{Binding FailCommand}" 
                       Appearance="Danger" Height="50" FontSize="16" HorizontalAlignment="Stretch"/>

            <ui:Button Grid.Column="2" Content="문제 패스" Icon="{ui:SymbolIcon ArrowSwap24}" Command="{Binding PassCommand}" 
                       Appearance="Secondary" Height="50" FontSize="16" HorizontalAlignment="Stretch"/>

            <ui:Button Grid.Column="4" Content="정답" Icon="{ui:SymbolIcon Checkmark24}" Command="{Binding CorrectCommand}" 
                       Appearance="Primary" Height="50" FontSize="16" HorizontalAlignment="Stretch"/>
        </Grid>
    </Grid>
</Window>