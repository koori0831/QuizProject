<Window x:Class="QuizApp.Views.EditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:QuizApp.ViewModels"
        xmlns:converters="clr-namespace:QuizApp.Converters"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="문제 에디터" Height="700" Width="1000"
        Background="{DynamicResource ApplicationBackgroundBrush}">
    
    <Window.Resources>
        <converters:PathToFullPathConverter x:Key="PathToFullPath"/>
    </Window.Resources>
    
    <Window.DataContext>
        <vm:EditorViewModel/>
    </Window.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Title -->
            <RowDefinition Height="*"/>    <!-- Content -->
            <RowDefinition Height="Auto"/> <!-- Footer -->
        </Grid.RowDefinitions>

        <TextBlock Text="퀴즈 데이터 에디터" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" 
                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 좌측: 테마 관리 -->
            <Border Grid.Column="0" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="테마 목록" FontWeight="Bold" Margin="0,0,0,10" FontSize="16" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    
                    <ListBox Grid.Row="1" ItemsSource="{Binding Themes}" SelectedItem="{Binding SelectedTheme}" 
                             DisplayMemberPath="Title" Margin="0,0,0,10"
                             Background="{DynamicResource ControlFillColorDefaultBrush}" BorderThickness="0"/>

                    <StackPanel Grid.Row="2">
                        <ui:TextBox PlaceholderText="새 테마 제목 입력" Text="{Binding NewThemeTitle, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ui:Button Grid.Column="0" Content="추가" Icon="{ui:SymbolIcon Add24}" 
                                       Command="{Binding AddThemeCommand}" HorizontalAlignment="Stretch" Appearance="Primary"/>
                            <ui:Button Grid.Column="2" Icon="{ui:SymbolIcon Delete24}" 
                                       Command="{Binding DeleteThemeCommand}" Appearance="Danger" ToolTip="선택 테마 삭제"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 우측: 문제 관리 -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- 문제 목록 -->
                <Border Grid.Row="0" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Text="문제 목록" FontWeight="Bold" Margin="0,0,0,10" FontSize="16" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        
                        <DataGrid Grid.Row="1" ItemsSource="{Binding Questions}" SelectedItem="{Binding SelectedQuestion}" 
                                  AutoGenerateColumns="False" CanUserAddRows="False" HeadersVisibility="Column"
                                  Background="{DynamicResource ControlFillColorDefaultBrush}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="정답" Binding="{Binding Answer}" Width="*"/>
                                <DataGridTextColumn Header="이미지 경로" Binding="{Binding ImagePath}" Width="2*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        
                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                            <ui:Button Content="문제 추가" Icon="{ui:SymbolIcon Add24}" 
                                       Command="{Binding AddQuestionCommand}" Margin="0,0,10,0"/>
                            <ui:Button Content="삭제" Icon="{ui:SymbolIcon Delete24}" 
                                       Command="{Binding DeleteQuestionCommand}" Appearance="Danger"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- 문제 상세 편집 -->
                <Border Grid.Row="2" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Text="상세 편집 (선택된 문제)" FontWeight="Bold" Margin="0,0,0,15" FontSize="16" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- 입력 폼 -->
                            <StackPanel Grid.Column="0">
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="정답" VerticalAlignment="Center" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    <ui:TextBox Grid.Column="1" Text="{Binding SelectedQuestion.Answer, UpdateSourceTrigger=PropertyChanged}"/>
                                </Grid>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="이미지" VerticalAlignment="Center" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    <ui:TextBox Grid.Column="1" Text="{Binding SelectedQuestion.ImagePath}" IsReadOnly="True" Margin="0,0,5,0"/>
                                    <ui:Button Grid.Column="2" Icon="{ui:SymbolIcon Folder24}" Command="{Binding UpdateImageCommand}"/>
                                </Grid>
                            </StackPanel>

                            <!-- 이미지 미리보기 -->
                            <Border Grid.Column="2" Background="Black" CornerRadius="4" Height="120">
                                <Image Source="{Binding SelectedQuestion.ImagePath, Converter={StaticResource PathToFullPath}}" 
                                       Stretch="Uniform"/>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
        
        <!-- 하단 저장 버튼 -->
        <ui:Button Grid.Row="2" Content="모든 변경사항 저장" Icon="{ui:SymbolIcon Save24}" Command="{Binding SaveCommand}" 
                HorizontalAlignment="Right" Margin="0,20,0,0" Padding="20,10" Appearance="Primary" FontSize="14"/>
    </Grid>
</Window>